@model IEnumerable<Country>

<h2>Countries</h2>

<table class ="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Region</th>
        <th>Population</th>
        @*<th>Capital</th>*@
    </tr>

    @foreach (var country in Model)
    {
        <tr>
            <td><a href=/Country/ViewCountry/@country.Id>@country.Id</a></td>
            <td>@country.Name</td>
            <td>@country.Region</td>
            <td>@country.Population</td>
            @*<td>@country.Capital</td>*@
        </tr>
    }
</table>
